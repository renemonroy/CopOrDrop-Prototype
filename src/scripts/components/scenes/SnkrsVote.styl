.snkrs-vote-scene

  .snkrs-vote-bg
    position: absolute
    top: -5%
    left: -5%
    background-position: center center
    background-size: cover
    background-color: white
    background-repeat: no-repeat
    width: 110%
    height: 110%
    filter: blur(1px);
    -webkit-filter: blur(1px);

  .snkrs-vote-overlay
    width: 100%
    height: 100%
    background-color: #111
    opacity: .9