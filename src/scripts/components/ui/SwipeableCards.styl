.ui-swipeable-cards

  .ui-swipeable-container
    margin: 0 auto
    perspective: 1500px
    position: relative
    z-index: 2

  .ui-swipeable-card
    background-color: #fff
    border-radius: .8rem
    height: 100%
    left: 0
    overflow: hidden
    position: absolute
    right: 0
    width: 100%
    z-index: 1
    -webkit-backface-visibility: hidden;

    &.ui-transition
      transition: transform .3s

  .ui-swipeable-navigation
    position: relative
    bottom: -4rem
    width: 100%
    display: flex
    justify-content: center

    .discard-button
      height: 4rem
      width: 4rem
      text-align: center
      margin: 0 .5rem
      font-size: 1.8rem
      padding: 0
      border-radius: 5rem

    .accept-button
      height: 4rem
      width: 4rem
      text-align: center
      margin: 0 .5rem
      font-size: 1.8rem
      padding: 0
      border-radius: 5rem

  img
    min-width: 100%
    height: auto
