.ui-swipeable-cards

  .ui-swipeable-container
    position: relative
    margin: 0 auto
    perspective: 1500px

  .ui-swipeable-card
    width: 100%
    height: 100%
    background-color: #e7e7e7
    z-index: 1
    position: absolute
    left: 0
    right: 0
    border-top: 1px solid #fff
    border-radius: .3rem
    transition: transform 0.3s
    overflow: hidden
