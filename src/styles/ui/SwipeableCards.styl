.ui-swipeable-cards

  .ui-swipeable-container
    margin: 0 auto
    perspective: 1500px
    position: relative

  .ui-swipeable-card
    background-color: #fff
    border-radius: .8rem
    height: 100%
    left: 0
    overflow: hidden
    position: absolute
    right: 0
    width: 100%
    z-index: 1

    &.ui-transition
      transition: transform .3s

  .ui-swipeable-navigation
    position: relative
    bottom: -4rem
    width: 100%
    display: flex
    justify-content: center

    .discard-button
      width: 5rem
      text-align: center
      margin: 0 .5rem

    .accept-button
      width: 5rem
      text-align: center
      margin: 0 .5rem

  img
    min-width: 100%
    height: auto
